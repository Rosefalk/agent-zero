{
	"compilerOptions": {
		"strict": true,
		"skipLibCheck": true,
		"noEmit": true,
		"isolatedModules": true,
		"incremental": true,
		"allowImportingTsExtensions": true,
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"module": "esnext",
		"moduleResolution": "Node",
		"lib": ["esnext"],
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules"]
}